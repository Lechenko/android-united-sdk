<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black_transparent">

        <ImageView
            android:id="@+id/fragment_qr_controls_close_button"
            android:layout_width="@dimen/fragment_qr_controls_close_button_width"
            android:layout_height="@dimen/fragment_qr_controls_close_button_height"
            android:padding="@dimen/fragment_qr_controls_close_button_padding"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fragment_qr_controls_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_qr_controls_replay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_transparent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_qr_controls_replay_url_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/fragment_qr_controls_replay_image_view"
            android:ellipsize="end"
            android:paddingLeft="@dimen/fragment_qr_controls_replay_url_text_view_padding_left"
            android:singleLine="true"
            android:text="@string/ad_url_example"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/fragment_qr_controls_replay_image_view"
            android:layout_width="@dimen/fragment_qr_controls_replay_image_view_width"
            android:layout_height="@dimen/fragment_qr_controls_replay_image_view_height"
            android:layout_alignParentEnd="true"
            android:background="@drawable/touch_feedback"
            android:padding="@dimen/fragment_qr_controls_replay_image_view_padding"
            android:src="@drawable/l_replay" />
    </RelativeLayout>

</RelativeLayout>