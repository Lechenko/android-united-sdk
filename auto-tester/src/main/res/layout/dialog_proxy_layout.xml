<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_proxy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Proxy settings"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp" />

    <TextView
        android:id="@+id/dialog_proxy_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_proxy_title"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Configure your proxy preferences"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp" />


    <Spinner
        android:id="@+id/dialog_proxy_spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_proxy_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_proxy_spinner"
        android:gravity="end">

        <Button
            android:id="@+id/dialog_proxy_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="Ok" />

    </LinearLayout>

</RelativeLayout>