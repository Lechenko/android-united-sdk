<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_qr_controls_replay_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/black_transparent">

    <TextView
        android:id="@+id/fragment_qr_controls_replay_url_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/fragment_qr_controls_replay_image_view"
        android:ellipsize="end"
        android:paddingStart="@dimen/fragment_qr_controls_replay_url_text_view_padding_left"
        android:singleLine="true"
        android:text="@string/qr_watch_again_text"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/fragment_qr_controls_replay_image_view"
        android:layout_width="@dimen/fragment_qr_controls_replay_image_view_width"
        android:layout_height="@dimen/fragment_qr_controls_replay_image_view_height"
        android:layout_alignParentEnd="true"
        android:background="@drawable/touch_feedback"
        android:padding="@dimen/fragment_qr_controls_replay_image_view_padding"
        android:src="@drawable/l_replay" />
</RelativeLayout>